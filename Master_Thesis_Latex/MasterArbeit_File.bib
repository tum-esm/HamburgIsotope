 keywords = {Air Pollutants/analysis;appliances;Climate;combustion;cooking;Household Articles;houses;Humans;Methane/analysis;Natural Gas;Nitrogen Dioxide;pollutants;post-meter emissions},
 pages = {2529--2539},
