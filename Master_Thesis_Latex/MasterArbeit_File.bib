 year = {2019},
 title = {Carbon and hydrogen isotopes of methane, ethane, and propane: A review of genetic identification of natural gas},
 url = {https://www.sciencedirect.com/science/article/pii/S001282521830388X},
 keywords = {Alkane;Carbon isotope;Genetic identification;Hydrogen isotope;Natural Gas;Secondary process},
 pages = {247--272},
